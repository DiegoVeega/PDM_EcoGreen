<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.NewFragmentProject">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pro_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/web_hi_res_513"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="8dp"
                >

                <Button
                    android:id="@+id/subir_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subir imagen"/>

                <Button
                    android:id="@+id/actualizar_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actualizar"/>

            </LinearLayout>

            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nombre:"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/project_details_name"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="nombredeproyecto"
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                />
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Descripcion:"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/project_details_description"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Descripcion"
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                />
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Objetivo:"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/project_details_objetivo"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Objetivo"
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                />
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Creado por:"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/project_details_user_creator"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Creador"
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                />
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Fecha creacion:"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/project_details_date"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Fecha"
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                />

            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tareas:"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/project_details_tasks"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ninguna"
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                />
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Privado:"
                android:fontFamily="sans-serif"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/project_details_privacy"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No"
                android:fontFamily="sans-serif-light"
                android:textSize="16sp"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
</layout>